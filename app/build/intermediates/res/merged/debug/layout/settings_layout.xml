<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:background="@color/background_color"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<TextView
				android:id="@+id/title"
				android:text="@string/settings_title"
				android:textSize="23dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>

			<TextView
				android:id="@+id/text_language"
				android:text="@string/settings_language"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>
			<Spinner
				android:id="@+id/spinner_languages"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
			<TextView
				android:id="@+id/text_book_begin"
				android:text="@string/settings_book_begin"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>
			<Spinner
				android:id="@+id/spinner_book_begin"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
			<TextView
				android:id="@+id/text_lesson_begin"
				android:text="@string/settings_lesson_begin"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>
			<Spinner
				android:id="@+id/spinner_lesson_begin"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
			<TextView
				android:id="@+id/text_book_end"
				android:text="@string/settings_book_end"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>
			<Spinner
				android:id="@+id/spinner_book_end"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
			<TextView
				android:id="@+id/text_lesson_end"
				android:text="@string/settings_lesson_end"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>
			<Spinner
				android:id="@+id/spinner_lesson_end"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
			<TextView
				android:id="@+id/text_level_begin"
				android:text="@string/settings_level_begin"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>
			<Spinner
				android:id="@+id/spinner_level_begin"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
			<TextView
				android:id="@+id/text_level_end"
				android:text="@string/settings_level_end"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>
			<Spinner
				android:id="@+id/spinner_level_end"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>
			<TextView
				android:id="@+id/text_learn_mode"
				android:text="@string/settings_learn_mode"
				android:textSize="15dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
            	android:padding="3dip"/>

			<Spinner
				android:id="@+id/spinner_learn_mode"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true"/>

			<Button android:id="@+id/moveVocabularies"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/settings_button_move_vocabularies"
				android:padding="3dip"></Button>

			<Button android:id="@+id/updateVocabularies"
  		  		android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
				android:text="@string/settings_button_update_vocabularies"
            	android:padding="3dip"></Button>

			<Button android:id="@+id/readVocabularies"
  		  		android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
				android:text="@string/settings_button_read_vocabularies"
            	android:padding="3dip"></Button>

			<Button android:id="@+id/writeVocabularies"
  		  		android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
				android:text="@string/settings_button_write_vocabularies"
            	android:padding="3dip"></Button>

			<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<Button android:id="@+id/OkButton"
  		  		android:layout_width="150dp"
    			android:layout_height="wrap_content"
				android:text="@string/settings_button_ok"
            	android:padding="3dip"></Button>
			<Button android:id="@+id/CancelButton"
  		  		android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
				android:text="@string/settings_button_cancel"
            	android:padding="3dip"></Button>
			</LinearLayout>
		</LinearLayout>		
	</ScrollView>
</LinearLayout>