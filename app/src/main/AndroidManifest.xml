<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.tobias.vocabulary_trainer"
      android:versionCode="1"
      android:versionName="0.5">
<uses-sdk android:minSdkVersion="4"/>
<supports-screens android:smallScreens="true"
                  android:normalScreens="true"
                  android:largeScreens="true"
                  android:anyDensity="true"/>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
<uses-permission android:name="android.permission.INTERNET"/>
	
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name="com.tobias.vocabulary_trainer.VocabularyTrainer"
            	  android:configChanges="locale"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    <activity android:name="com.tobias.vocabulary_trainer.Settings"
        	android:configChanges="locale"></activity>
    
    <activity android:name="com.tobias.vocabulary_trainer.ErrorNoVocabulariesList"
			android:label="@string/error_title">
		</activity>
	<activity android:name="com.tobias.vocabulary_trainer.ErrorNoVocabularies"
			android:label="@string/error_title"
			android:theme="@android:style/Theme.Dialog">
		</activity>
	<activity android:name="com.tobias.vocabulary_trainer.UpdateVocabularies"
			android:label="@string/update_title"
			android:theme="@android:style/Theme.Dialog">
		</activity>
	<activity android:name="com.tobias.vocabulary_trainer.WarningReadVocabularies"
			android:label="@string/warning_title"
			android:theme="@android:style/Theme.Dialog">
		</activity>
	<activity android:name="com.tobias.vocabulary_trainer.Info"
			android:label="@string/info_title">
		</activity>
	<activity android:name="com.tobias.vocabulary_trainer.Statistics">
		</activity>

    </application>
    
</manifest>