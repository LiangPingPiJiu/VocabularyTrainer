<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tobias.vocabulary_trainer"
    android:versionCode="1"
    android:versionName="0.5">

    <uses-sdk android:minSdkVersion="10" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        <activity
            android:name=".VocabularyTrainer"
            android:configChanges="locale"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:configChanges="locale" />
        <activity
            android:name=".ErrorNoVocabulariesList"
            android:label="@string/error_title"></activity>
        <activity
            android:name=".ErrorNoVocabularies"
            android:label="@string/error_title"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".UpdateVocabularies"
            android:label="@string/update_title"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".WarningReadVocabularies"
            android:label="@string/warning_title"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".MoveVocabularies"
            android:label="@string/move_vocabularies_title"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".Info"
            android:label="@string/info_title"></activity>
        <activity android:name=".Statistics"></activity>
    </application>

</manifest>